<resources>

    <style name="Theme.Rekado.DayNight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.Rekado.Invisible" parent="Theme.Rekado.DayNight">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Text" parent="android:Widget.TextView" />

    <style name="Text.Subtitle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>